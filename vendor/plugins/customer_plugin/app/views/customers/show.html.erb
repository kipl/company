<div class="contextual">
<%= link_to_if_authorized l(:button_edit), {:controller => 'customers', :action => 'edit', :id => @project, :customer_id => @customer.id}, :class => 'icon icon-edit' unless @customer.nil? %>
<%= link_to_if_authorized l(:label_customer_view), {:controller => 'customers', :action => 'show', :id => @project}, :class => 'icon icon-user' %>
<%= link_to_if_authorized l(:label_customer_assign), {:controller => 'customers', :action => 'select', :id => @project}, :class => 'icon icon-move' %>
<%= link_to_if_authorized l(:label_customer_list), {:controller => 'customers', :action => 'list', :id => @project}, :class => 'icon icon-users' %>
<%= link_to_if_authorized l(:label_customer_new), {:controller => 'customers', :action => 'new', :id => @project}, :class => 'icon icon-add' %>
</div>

<h2><%= l(:label_customer) %></h2>

<% unless @customer.nil? -%>
<div class="box">
<p> <%= l(:field_customer_company) %>: <%= h @customer.company %> </p>
<p> <%= l(:field_customer_DIN) %>: <%= h @customer.DIN %> </p>
<p> <%= l(:field_customer_name) %>: <%= h @customer.name %> </p>
<p> <%= l(:field_customer_occupation) %>: <%= h @customer.occupation %> </p>
<p> <%= l(:field_customer_address_line1) %>: <%= h @customer.address_line1 %> </p>
<p> <%= l(:field_customer_address_line2) %>: <%= h @customer.address_line2 %> </p>
<p> <%= l(:field_customer_city) %>: <%= h @customer.city %> </p>
<p> <%= l(:field_customer_state) %>: <%= h @customer.state %> </p>
<p> <%= l(:field_customer_pincode) %>: <%= h @customer.pincode %> </p>
<p> <%= l(:field_customer_ISO) %>: <%= h @customer.ISO %> </p>
<p> <%= l(:field_customer_country) %>: <%= h @customer.country %> </p>
<p> <%= l(:field_customer_email) %>: <%= h @customer.email %> </p>
<p> <%= l(:field_customer_phone) %>: <%= h @customer.phone %> </p>
<p> <%= l(:field_customer_country) %>: <%= h @customer.country %> </p>
</div>
<% else %>
<p class="nodata"><%=l(:label_no_data)%></p>
<% end %>

<% content_for(:header_tags) do %>
<style type="text/css">
.icon-users { background-image: url(../../images/users.png); }
</style>
<% end %>
