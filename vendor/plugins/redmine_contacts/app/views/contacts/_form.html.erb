<%= error_messages_for 'contact' %>
<!-- {:onclick=>"Element.show('edit_tags_form'); Element.hide('last_name');  return false;"} -->

<div class = "box"> 
	<p class="avatar"><%= avatar_to(@contact, :size => "64") %></p>    
	<p><%= label_tag l(:field_contact_avatar) %> <%= file_field_tag 'contact_avatar[file]', :size => 30, :id => nil  -%> </p>
	<!--<p><%= f.check_box (:is_company, :label=>l(:field_contact_is_company),  :onclick => "if (this.checked) {Element.hide('person_data');$('job_title').firstChild.innerHTML='#{l(:field_company_field)}';} else {Element.show('person_data');$('job_title').firstChild.innerHTML='#{l(:field_contact_job_title)}';}" ) %></p>-->
	
	<p><%= f.text_field :first_name, :label=> !@contact.is_company ? l(:field_contact_first_name) : l(:field_contact_name), :required => true, :size => 80 %></p>
	<% if @contact.is_company %>
	<div id="person_data" style="display: none;">
	
	<% else %>
	<div id="person_data">
	<% end %>
	
		<p><%= f.text_field :last_name, :label=>l(:field_contact_last_name), :id => 'last_name' %></p>
		<p><%= f.text_field :middle_name, :label=>l(:field_contact_middle_name),:id => 'middle_name'  %></p>
		
		
		<p><label for="gender">Gender:</label>
			<%= radio_button :contact, :gender, "Male",:checked => "checked" %> Male 
			<%= radio_button :contact, :gender, "Female" %> Female</p>
		
		<p><label for="maritalstatus">Marital Status:</label>
			<%= radio_button :contact, :maritalstatus, "Unmarried",:checked => "checked" %> Unmarried 
			<%= radio_button :contact, :maritalstatus, "Married" %> Married
			<%= radio_button :contact, :maritalstatus, "Married" %> Divorced</p>	
		
		<p><%= f.text_field :din, :label=>l(:field_contact_din) , :id => 'din',:enabled => "enabled"%>
		<br>
		<small>
		(<%= l(:label_add_din_rule) %> )
		</small></p>
		
		<!--<p> 
		<% if User.current.id == 1 %>
		<%= f.text_field :din, :label=>l(:field_contact_din) , :id => 'din',:enabled => "enabled"%>
		<% else %>
		<%= f.text_field :din, :label=>l(:field_contact_din) , :id => 'din',:disabled => "disabled"%>
		<% end %>
		<br>
		<small>
		(<%= l(:label_add_din_rule) %> )
		</small></p>-->
		 
		<% if User.current.id == 1 %>
		<p><label for="status">Status:</label>
			<%= radio_button :contact, :status, "Pending",:checked => "checked" %> Pending 
			<%= radio_button :contact, :status, "Approved" %> Approved</br>
		<% else %>
		<p><label for="status">Status:</label>
			<%= radio_button :contact, :status, "Pending",:checked => "checked",:type => "hidden" %> Pending 
			<%= radio_button :contact, :status, "Approved",:disabled => "disabled"  %> Approved
			<br>
			<% end %>
		<small>
		(<%= l(:label_add_status_rule) %> )
		</small></p>

		
		<p><%= f.text_field :fatherfname, :label=>l(:field_contact_fatherfname) , :id => 'fathermname'%></p>
		<p><%= f.text_field :fathermname, :label=>l(:field_contact_fathermname), :id => 'fathermname' %></p>
		<p><%= f.text_field :fatherlname, :label=>l(:field_contact_fatherlname), :id => 'fatherlname' %></p>
		<p><%= f.text_field :husbandfname, :label=>l(:field_contact_husbandfname), :id => 'husbandfname' %></p>
		<p><%= f.text_field :husbandmname, :label=>l(:field_contact_husbandmname), :id => 'husbandmname' %></p>
		<p><%= f.text_field :husbandlname, :label=>l(:field_contact_husbandlname), :id => 'husbandlname' %></p>
		<p><%= f.text_field :nationality, :label=>l(:field_contact_nationality), :id => 'nationality' %></p>
		<p><%= f.text_field :birthplace, :label=>l(:field_contact_birthplace), :id => 'birthplace' %></p>
		<p><%= f.text_field :panno, :label=>l(:field_contact_panno), :id => 'panno' %></p>
		<p><%= f.text_field :electionid, :label=>l(:field_contact_electionid), :id => 'electionid' %></p>
		<p><%= f.text_field :passportno, :label=>l(:field_contact_passportno), :id => 'passportno' %></p>
		<p><%= f.text_field :dlicenceno, :label=>l(:field_contact_dlicenceno), :id => 'dlicenceno' %></p>
		<p><%= f.text_field :city, :label=>l(:field_contact_city), :id => 'city' %></p>
		<p><%= f.text_field :state, :label=>l(:field_contact_state), :id => 'state' %></p>
		<p><%= f.text_field :country, :label=>l(:field_contact_country), :id => 'country' %></p>
		<p><%= f.text_field :pincode, :label=>l(:field_contact_pincode), :id => 'pincode' %></p>
		<p><%= f.text_field :faxno, :label=>l(:field_contact_faxno), :id => 'faxno' %></p>
		<p><%= f.text_field :permanentaddress1, :label=>l(:field_contact_permanentaddress1), :id => 'permanentaddress1' %></p>
		<p><%= f.text_field :permanentaddress2, :label=>l(:field_contact_permanentaddress2), :id => 'permanentaddress2' %></p>
		<p><%= f.text_field :permanentcity, :label=>l(:field_contact_permanentcity), :id => 'permanentcity' %></p>
		<p><%= f.text_field :permanentstate, :label=>l(:field_contact_permanentstate), :id => 'permanentstate' %></p>
		<p><%= f.text_field :permanentcountry, :label=>l(:field_contact_permanentcountry), :id => 'permanentcountry' %></p>
		<p><%= f.text_field :permanentpincode, :label=>l(:field_contact_permanentpincode), :id => 'permanentpincode' %></p>
		<p><%= f.text_field :permanentphoneno, :label=>l(:field_contact_permanentphoneno), :id => 'permanentphoneno' %></p>
		<p><%= f.text_field :permanentfaxno, :label=>l(:field_contact_permanentfaxno), :id => 'permanentfaxno' %></p>
		<p><%= f.text_field 'company', :label=>l(:field_contact_company) -%></p> 
		<p><%= f.text_field :birthday, :size => 12 %><%= calendar_for('contact_birthday') %> </p>   
	</div>
	
	<p id="job_title"><%= f.text_field :job_title, :label => !@contact.is_company ? l(:field_contact_job_title) : l(:field_company_field) %></p>
	
	<p><%= f.text_area 'address', :label=>l(:field_contact_address), :rows => 5 -%></p>

	<div id="phones_fields"> 
		<p>
			<%= f.text_field :phone, :label=>l(:field_contact_phone), :size => 80 -%>
			<br>
			<small>
			(<%= l(:label_add_phones_rule) %> )
			</small>
		 </p>  
	</div>   
			
	<p>
		<%= f.text_field 'email', :label=>l(:field_contact_email), :size => 80 -%>
		<br>
		<small>
		(<%= l(:label_add_emails_rule) %> )
		</small>
	</p>     

	<p><%= f.text_field 'website', :label=>l(:field_contact_website) -%></p>
	<p><%= f.text_field 'skype_name', :label=>l(:field_contact_skype) -%></p>
	<p class  = "notes"><%= f.text_area :background , :cols => 80, :rows => 8, :class => 'wiki-edit', :label=>l(:field_contact_background)  %></p>
	<%= wikitoolbar_for 'contact_background' %>
	<p><%= f.text_field :tag_names, :label =>l(:field_contact_tag_names), :size => "100%" %></p>  

	<p><%= f.select :assigned_to_id, (@project.assignable_users.collect {|m| [m.name, m.id]}), :include_blank => true, :label => l(:label_assigned_to) %></p> 
</div>

<% content_for :header_tags do %>
	<%= javascript_include_tag :contacts, :plugin => 'redmine_contacts'  %>
<% end %>