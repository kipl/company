<%= error_messages_for 'deal' %>
<div class = "box"> 
	<p><%= f.text_field :name, :label=>l(:field_deal_name), :size => 60, :required => true %></p>  
    <p> <%= label_tag l(:field_deal_contact) %>
		<%=  select_tag ("contacts", options_for_select( @contacts.collect {|p| [ p.name, p.id ] }, :selected => @deal.contacts.any? ? @deal.contacts.first.id : ""), { :include_blank => false, :required => true })   %> </p>
	<p>
		<%= f.text_field :price, :label => l(:field_deal_price), :size => 10 %>
	 </p>
	<p><%= f.text_area :background, :label=>l(:field_deal_background), :rows => 5 -%></p>   
	<p><%= f.select :assigned_to_id, (@project.assignable_users.collect {|m| [m.name, m.id]}), :include_blank => true, :label => l(:label_assigned_to) %></p>   
</div>
