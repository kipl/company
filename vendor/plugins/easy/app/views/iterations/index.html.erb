<% content_for :title, l(:active_iterations) %>
<% content_for :h2, l(:active_iterations) %>
<% content_for :actions do %>
  <li><%= link_to l(:finished), finished_project_iterations_path %></li>
  <li><%= link_to l(:planned), planned_project_iterations_path %></li>
<% end %>

<% if @iterations.empty? -%>
  <p>
    <%= l(:page_only_active_iterations) %>
  </p>
  <p>
    <%= l(:no_active_iterations) %>
  </p>
<% else -%>
  <div id="iterations" class="section_container">
    <div class="section">
      <h2><%= l(:active) %></h2>
      <div class="active">
        <% width = @iterations.size == 1 ? 600 : 300 -%>
        <% height = @iterations.size == 1 ? 450 : 225 -%>
        <ul class="iterations_list">
          <%= render @iterations, :width => width %>
        </ul>
      </div>
    </div>
  </div>
<% end -%>
